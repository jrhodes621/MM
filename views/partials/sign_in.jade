div.container-fluid.login-container.login-page(style='background-color: inherit;')
  div.row
    div.col-sm-6.col-sm-offset-3.text-center
      a(href="../")
        img(src="/images/logo-black.png", width="300", style="margin-bottom: 20px;")
      div.login-form.new-user
        <!-- Errors container -->
        div.errors-container
        div.form-group
          input.form-control.input-dark.input-lg(name="email", type="text" ,placeholder="you@example.com", autofocus="true", ng-model="credentials.email_address")
        div.form-group
          input.form-control.input-dark.input-lg(name="password", type="password", placeholder="password", ng-model="credentials.password")
        div.form-group.text-left
          input#remember_me(type="checkbox", name="remember_me")
          label(for="remember_me", style="color: #979889; font-weight: 400;") Remember Me
        div.form-group
          button.btn.btn-success.btn-block.text-center(ng-click="signInClicked()") Login
        div.login-footer
          .link-to(style="display: block;")
            a(href="sign_up") Sign up
          .link-to(style="display: block;")
            a(href="") Forgot your password?
